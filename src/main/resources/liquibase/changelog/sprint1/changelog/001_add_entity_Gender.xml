<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="autoIncrement" value="true"/>

    <!--
        Added the entity Gender
    -->
    <changeSet id="001_add_entity_Gender" author="Suren">
        <createTable tableName="gender">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="identifier" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="001_add_entity_Gender" author="Suren">
        <loadData file="liquibase/changelog/sprint1/data/Gender.csv"
                  separator=";" tableName="gender">
            <column name="id" type="numeric" />
            <column name="name" type="string" />
            <column name="identifier" type="string" />
        </loadData>
    </changeSet>
</databaseChangeLog>
